{
  "name": "js-title-case",
  "version": "1.0.7",
  "private": false,
  "description": "Convert a string to title case, while handling edge cases",
  "homepage": "https://github.com/mi11er-net/js-title-case",
  "bugs": {
    "url": "https://github.com/mi11er-net/js-title-case/issues"
  },
  "license": "MIT",
  "author": "Matthew Miller <matthew@mi11er.net>",
  "files": ["dist/*", "LICENSE", "package.json", "README.md"],
  "main": "dist/title-case.js",
  "module": "dist/title-case.module.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mi11er-net/js-title-case.git"
  },
  "scripts": {
    "build": "run-s clean test build:*",
    "build:main": "BABEL_ENV=main babel -d dist/ src/",
    "build:module": "BABEL_ENV=module babel -d dist/module/ src/",
    "clean": "rimraf .nyc_output coverage npm-debug.log dist/*",
    "precommit": "run-s lint-staged pretty-quick nsp",
    "lint": "eslint --fix .",
    "lint-staged": "lint-staged",
    "nsp": "nsp check",
    "semantic-release": "semantic-release",
    "pretest": "run-s lint",
    "test": "BABEL_ENV=main nyc mocha",
    "posttest": "BABEL_ENV=main nyc report --reporter=lcov",
    "pretty-quick": "pretty-quick --staged"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "env": {
      "module": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current",
                "browsers": ["last 2 versions"]
              },
              "modules": false
            }
          ]
        ]
      },
      "main": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current",
                "browsers": ["last 2 versions"]
              },
              "modules": "commonjs"
            }
          ]
        ]
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@mi11er/eslint-config": "2.2.0",
    "@semantic-release/changelog": "1.0.0",
    "@semantic-release/exec": "2.0.0",
    "@semantic-release/git": "3.0.0",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-preset-env": "1.6.1",
    "babel-register": "6.26.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.18.2",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-no-unsafe-innerhtml": "1.0.16",
    "eslint-plugin-optimize-regex": "1.1.5",
    "eslint-plugin-scanjs-rules": "0.2.1",
    "eslint-plugin-security": "1.4.0",
    "husky": "0.14.3",
    "lint-staged": "7.0.0",
    "mocha": "5.0.1",
    "mocha-cases": "0.2.1",
    "npm-run-all": "4.1.2",
    "nsp": "3.2.1",
    "nyc": "11.4.1",
    "prettier": "1.11.1",
    "pretty-quick": "1.4.1",
    "rimraf": "2.6.2",
    "semantic-release": "13.0.1",
    "sort-package-json": "1.11.0"
  },
  "nyc": {
    "include": ["src/"],
    "require": ["babel-register"],
    "all": true
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "publish": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/exec",
        "cmd": "yarn pack"
      },
      {
        "path": "@semantic-release/git",
        "assets": ["package.json", "npm-shrinkwrap.json", "CHANGELOG.md"]
      },
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "js-title-case-v*.tgz",
            "label": "npm package"
          }
        ]
      }
    ]
  }
}
