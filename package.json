{
  "name": "js-title-case",
  "description": "Convert a string to title case, while handling edge cases",
  "version": "1.0.4",
  "homepage": "https://github.com/MatthewMi11er/js-title-case",
  "author": "Matthew Miller <matthew@mi11er.net>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthewMi11er/js-title-case.git"
  },
  "bugs": {
    "url": "https://github.com/MatthewMi11er/js-title-case/issues"
  },
  "main": "dist/title-case.js",
  "module": "dist/title-case.module.js",
  "files": [
    "dist/*",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prepublish": "run-s build",
    "pretest": "run-s lint",
    "test": "BABEL_ENV=main nyc mocha",
    "posttest": "BABEL_ENV=main nyc report --reporter=lcov",
    "lint": "run-p lint:*",
    "lint:js": "eslint --ignore-path .gitignore --fix  .",
    "lint:package.json": "jsonlint -i package.json",
    "build": "run-s clean test build:*",
    "build:main": "BABEL_ENV=main babel -d dist/ src/",
    "build:module": "BABEL_ENV=module babel -d dist/module/ src/",
    "clean": "rimraf .nyc_output coverage npm-debug.log dist/*"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-preset-env": "1.6.1",
    "babel-register": "6.26.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "4.11.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.8.0",
    "greenkeeper-lockfile": "1.11.0",
    "jsonlint": "1.6.2",
    "mocha": "4.0.1",
    "mocha-cases": "0.1.10",
    "npm-run-all": "4.1.1",
    "nyc": "11.2.1",
    "rimraf": "2.6.2"
  },
  "nyc": {
    "include": [
      "src/"
    ],
    "require": [
      "babel-register"
    ],
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "env": {
      "module": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current",
                "browsers": [
                  "last 2 versions"
                ]
              },
              "modules": false
            }
          ]
        ]
      },
      "main": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current",
                "browsers": [
                  "last 2 versions"
                ]
              },
              "modules": "commonjs"
            }
          ]
        ]
      }
    }
  }
}